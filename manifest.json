{
    "manifest_version": 3,
    "name": "TrousersOnly",
    "version": "1.0",
    "description": "Block distractions accross a whole range of sites to help keep you focussed",
    "icons": {
        "16":  "img/icon-16.png",
        "32":  "img/icon-32.png",
        "48":  "img/icon-48.png",
        "128": "img/icon-128.png"
    },
    "content_scripts": [
        {
          "js": ["dist/main.min.js"],
          "css": ["dist/main.min.css"],
          "matches": [
            "<all_urls>"
          ]
        }
    ],
    "action": {
      "default_popup": "settings.html"
    }
}